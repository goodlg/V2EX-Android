<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- for main ui -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- for toolbar-->
    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!-- for top nav tab -->
    <style name="AppTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">?colorPrimary</item>
        <item name="tabMinWidth">0dp</item>
        <item name="tabIndicatorColor">@android:color/white</item>
        <!--<item name="tabTextColor">@android:color/darker_gray</item>-->
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextAppearance">@style/AppTheme.TabLayout.TextAppearance</item>
    </style>
    <style name="AppTheme.TabLayout.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#6fff</item>
    </style>

    <!-- for bootom tab -->
    <style name="AppTheme.BottomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@color/colorBottomTabBar</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="AppTheme.Topic.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ff333539</item>
    </style>

    <style name="AppTheme.Topic.ItemDivider" parent="AppTheme">
        <item name="android:listDivider">@drawable/divider</item>
    </style>

    <style name="AppTheme.Topic.ReplyCount" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/reply_count_background</item>
        <item name="android:textColor">@color/reply_count_color</item>
    </style>

</resources>
