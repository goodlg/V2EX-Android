<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorLineBg_separator"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <!--android:background="@android:color/white"-->
    <test.demo.gyniu.v2ex.widget.TopicView
        android:id="@+id/topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/postscript"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <test.demo.gyniu.v2ex.widget.TopOptionBar
        android:id="@+id/topOptBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <test.demo.gyniu.v2ex.widget.BottomOptionBar
        android:id="@+id/bottomOptBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!-- reserved to include postscript -->
</LinearLayout>