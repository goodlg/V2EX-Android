<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/user_avatar"
            android:src="@mipmap/ic_me"
            android:layout_width="@dimen/user_avatar_size"
            android:layout_height="@dimen/user_avatar_size" />

        <TextView
            android:id="@+id/topic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:maxLines="2"
            android:layout_toEndOf="@id/user_avatar"
            android:layout_toRightOf="@id/user_avatar"
            />

        <TextView
            android:id="@+id/topic_node"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_below="@id/topic_title"
            android:layout_alignStart="@+id/topic_title"
            android:layout_alignLeft="@+id/topic_title" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_toEndOf="@id/topic_node"
            android:layout_toRightOf="@id/topic_node" />

        <TextView
            android:id="@+id/reply_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_toEndOf="@id/username"
            android:layout_toRightOf="@id/username" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="@dimen/reply_counter_size"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/reply_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </LinearLayout>
</LinearLayout>
