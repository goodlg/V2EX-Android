<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <test.demo.gyniu.v2ex.widget.AvatarView
        android:id="@+id/node_img"
        android:layout_width="@dimen/node_img_size"
        android:layout_height="@dimen/node_img_size"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_default_node_img" />

    <TextView
        android:id="@+id/node_topics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="789"
        android:textColor="#444"
        android:layout_marginBottom="15dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/node_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/node_topics"
        android:textColor="#444"
        android:text="@string/search_nodes_hint"
        android:textSize="16sp" />
</RelativeLayout>