<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp" >

    <test.demo.gyniu.v2ex.widget.AvatarView
        android:id="@+id/node_img"
        android:layout_width="@dimen/node_img_size"
        android:layout_height="@dimen/node_img_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_default_node_img" />

    <TextView
        android:id="@+id/node_grid_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/node_img"
        android:layout_centerHorizontal="true"
        android:textColor="#444"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/node_grid_topics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/node_grid_title"
        android:layout_centerHorizontal="true"
        android:textColor="#999"
        android:textSize="12sp" />
</RelativeLayout>